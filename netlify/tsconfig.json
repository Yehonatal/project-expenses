{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "outDir": "functions-dist",
        "rootDir": "functions",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["functions/**/*"],
    "exclude": ["functions-dist", "node_modules"]
}
